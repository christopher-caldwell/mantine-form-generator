{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "incremental": true,
    "sourceMap": true,
    "types": [],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "module": "es6",
    "target": "es5",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
